// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java-postgres
{
	"name": "Java & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"moby": true,
			"installDockerBuildx": true,
			"version": "24.0.7",
			"dockerDashComposeVersion": "v2"
		},
		"ghcr.io/devcontainers-contrib/features/gradle-sdkman:2.0.14": {
			"version": "latest",
			"jdkVersion": "21.0.1-open",
			"jdkDistro": "open"
		},
		"ghcr.io/devcontainers-contrib/features/jmeter-sdkman:2.0.14": {
			"version": "latest",
			"jdkVersion": "21.0.1-open",
			"jdkDistro": "open"
		},
		"ghcr.io/devcontainers-contrib/features/maven-sdkman:2.0.14": {
			"version": "latest",
			"jdkVersion": "21.0.1-open",
			"jdkDistro": "open"
		},
		"ghcr.io/devcontainers-contrib/features/mvnd-sdkman:2.0.15": {
			"version": "latest",
			"jdkVersion": "21.0.1-open",
			"jdkDistro": "open"
		},
		"ghcr.io/ebaskoro/devcontainer-features/sdkman:1.0.0": {
			"candidate": "java",
			"version": "21.0.1-open"
		},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1.0.2": {
			"packages": "curl,nano,wget,bash-completion"
		}
	
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or with the host.
	// "forwardPorts": [5432],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"mhutchie.git-graph",
				"vscjava.vscode-java-pack",
				"vscjava.vscode-maven",
				"42Crunch.vscode-openapi"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
